# Run command in repos:
# git maintenance start

[user]
    name = Juan Banda
    email = jubajr17@gmail.com

[core]
    autocrlf = input

[merge]
    ff = only

[alias]
    cm = commit -m
    co = checkout
    d = diff
    dv = difftool -t vimdiff -y
    f = fetch
    gl = config --global -l
    l = log -1 HEAD --stat
    ll = log --oneline
    rv = remote -v
    se = !git rev-list --all | xargs git grep -F
    st = status -sb

[init]
    defaultBranch = main

[push]
    default = current
    autoSetupRemote = true

[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f

[rerere]
    enabled = true

[column]
    ui = auto

[branch]
    sort = -committerdate

[submodule]
    recurse = true
